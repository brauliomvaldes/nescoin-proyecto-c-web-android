@model IEnumerable<Nescoin.Conexion.Models.Tbl_Ciudad>

@{
    ViewBag.Title = "Ciudades";
}

<h2>Ciudades</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
    <br />
    <a href="/Home/Index">Volver a administración</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tbl_Pais.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Pais.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_ciudad }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.id_ciudad }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_ciudad })
        </td>
    </tr>
}

</table>
