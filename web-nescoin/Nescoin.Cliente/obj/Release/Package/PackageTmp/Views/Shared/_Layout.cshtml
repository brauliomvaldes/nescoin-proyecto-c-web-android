<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NESCOIN</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />
</head>
<body>
    <div class="container-fluid col-12">

        <!--Inicio Logo NESCOIN-->
        <table class="table" border="0">
            <tr>
                <td>
                    <div class="col-12 m-auto text-center d-inline-block">
                        <img class="img-logo-principal" src="~/assets/img/Logo-Nescoin.png" />
                        <!--Opciones para ver botones inicio sesión o menú de usuario registrado-->
                        <!--arroba{var conectado = false;}-->
                        <!--Si conectado = false mostrara boton de login y registro -->
                        @if (Session["Usuario"] == null)
                        {
                            <div class="float-right">
                                <span><a href="~/login" class="btn btn-agregar">Login</a></span>
                                <span><a href="~/registro" class="btn btn-compartir ">Registrarse</a></span>
                            </div>
                        }
                        else
                        {
                            <!--Si Conectado = true mostrara menú-->

                            <div class="dropdown float-right">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Menú Usuario
                                </button>
                                <div class="dropdown-menu dropdown-menu1" aria-labelledby="dropdownMenuButton">

                                    <p class="dropdown-item" data-target="#registrarContacto" data-toggle="modal">Agregar nuevo contacto</p>
                                    <p class="dropdown-item"><a href="~/Home">Mi Escritorio</a></p>
                                    <p class="dropdown-item" data-target="#registrarPerfil" data-toggle="modal">Mi Perfil</p>
                                    <p class="dropdown-item" data-target="#cambioclave" data-toggle="modal">Cambiar Contraseña</p>
                                    <a class="dropdown-item" href="~/Vitrina">Vitrina</a>
                                    <a class="dropdown-item" href="~/Salir">Salir</a>
                                </div>
                            </div>
                            <!--Pop up lista de contacto-->
                            <div class="modal fade" id="registrarContacto" tabindex="-1">
                                @Html.Partial("~/Views/Contactos/RegistroContacto.cshtml")                            
                            </div>
                            <!--Pop up lista de contacto-->
                            <div class="modal fade" id="registrarPerfil" tabindex="-1">
                                @Html.Action("Index", "Perfil")
                            </div>
                            <!--Pop up cambio de contraseña-->
                            <div class="modal fade" id="cambioclave" tabindex="-1">
                                @Html.Partial("~/Views/Recupera/Cambio.cshtml")
                            </div>

                        }
                        <!------------------------------------------------------------------------->
                    </div>
                </td>
            </tr>
        </table>
        <!--Fin Logo NESCOIN-->
        <!-- El RenderBody dibuja la vista Index.cshtml-->
        <div class="mt-3 align-content-center">
            @RenderBody()
        </div>
        <!-- El RenderBody dibuja la vista Index.cshtml-->
        <!--Inicio Pie de página -->
        <div class="card-footer">
            <footer>
                <p>&copy; @DateTime.Now.Year - NESCOIN</p>
            </footer>
        </div>
        <!--Fin Pie de pagina -->
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>
