@{
    ViewBag.Title = "Pagina de inicio";
    ViewBag.nombreUsuario = Session["NombreUsuario"];
}

<div>
    <div class="font-italic text-center">
        <font class="saludo-usuario">Bienvenido: @ViewBag.nombreUsuario</font>
    </div>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<!--INICIO contenedor principal-->
<div class="card m-1 p-2">

    <!--Saludo bienvenido*****************************************************************-->
    <div class="container-fluid">

        <!--DIBUJA LA LISTA DE CONTACTOS DEL USUARIO LOGEADO (LA DEL LAZO IZQUIERDO)-->
        @Html.Action("retornaListaContacto", "ListaContacto")
        <!--------------------------------------------->
        <!----Inicio Escritorio Contacto------------->

        <div class="col-md-10 col-lg-9  m-auto tab-pane d-inline-block detalle-contacto">

            <div class="card-header">
                <div class="d-inline-block">
                    <h2>¿Que vas a hacer hoy?</h2>
                </div>

                <!--Inicio Acciones para el Contacto-->
                <div>
                    <div class="float-right">
                        <a class="btn btn-sm btn-agregar" data-target="#publicar" data-toggle="modal">Crear Proyecto</a>
                        <a class="btn btn-sm btn-compartir" data-target="#sumarContacto" data-toggle="modal">Agregar Contacto</a>
                    </div>

                    <!--Pop up agrear contacto seleccionado-->
                    <div class="modal fade" id="sumarContacto" tabindex="-1">
                        @Html.Partial("~/Views/Contactos/RegistroContacto.cshtml")
                    </div>
                    <div class="modal fade" id="publicar" tabindex="-1">
                        @Html.Action("Index", "Registrar")
                       
                    </div>
                </div>

                <!--Fin Acciones para el Contacto-->
                <!--Inicio contanedor TAB (Proyectos, Presupuesto-->
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="proyectos" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Proyectos Publicados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Responder Solicitud de Presupuesto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#historial" role="tab" aria-controls="profile" aria-selected="false">Mi Historial</a>
                    </li>
                </ul>


                <div class="col-12 tab-content border myTabContent " id="myTabContent">
                    <!--Inicio contenedor proyectos-->
                    <div class="tab-pane fade show active p-2" id="home" role="tabpanel" aria-labelledby="proyectos">
                        <!--Vista de los proyectos con scrollbar-->
                        <div class="list-tab">
                            <section>
                                @Html.Action("retornaListaOfertaTrabajo", "Oferta", new { flag = "1" })
                            </section>
                        </div>
                    </div>
                    <!--Fin contenedor proyectos-->
                    <!--Inicio contenedor presupuesto-->
                    <div class="tab-pane fade p-2" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                        <!--Vista de los presupuestos con scrollbar-->
                        <div class="list-tab">
                            <section>
                                @Html.Action("retornaListaPresupuesto", "Presupuesto", new { flag = "1" })
                            </section>
                        </div>

                    </div>
                    <!--Inicio contenedor presupuesto-->
                    <!--Inicio contenedor historial-->
                    <div class="tab-pane fade p-2" id="historial" role="tabpanel" aria-labelledby="profile-tab">
                        <!--------------------------------------------->
                        <!--Vista de los presupuestos con scrollbar-->
                        <div class="list-tab">
                            <section>
                                @Html.Action("retornaHistorialContacto", "HistorialContacto", new { flag = "1" })
                            </section>
                        </div>

                    </div>
                    <!--fin contenedor historial-->

                </div>
            </div>

        </div>
    </div>
    <!--FIN contenedor principal-->
 </div>