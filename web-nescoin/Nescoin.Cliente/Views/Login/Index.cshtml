    <form class="form-signin justify-content-xl-center" action="~/Login/VerificaIngreso" method="post">
        <div class="simple-login-container">
            <h2>Credenciales</h2>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="text" class="form-control" placeholder="Nombre de Usuario" name="nombre" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="password" placeholder="Ingrese su Password" class="form-control" name="contraseña" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="submit" class="btn btn-block btn-agregar">
                </div>
            </div>
            <hr>
            <a class="btn btn-outline-primary col-12" href="/Registro">¿Usted no tiene cuenta?</a>
            <hr>
            <a class="btn btn-outline-secondary col-12" href="/Recupera">¿Olvidó su contraseña?</a>

            <div class="alert alert-light" role="alert">
                <h2 class="alert-danger">@ViewBag.mensaje</h2>
            </div>

        </div>
    </form>

