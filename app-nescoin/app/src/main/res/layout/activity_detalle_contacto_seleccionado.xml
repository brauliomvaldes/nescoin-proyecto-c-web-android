<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaContactos">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:scaleY="1.3"
        android:scaleX="1.5"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_logo_nescoin_foreground" />
    <TextView
        android:id="@+id/edt_registro_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Detalle Contacto"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary_1"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:hint="Nombre Contacto"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"
        android:background="@drawable/edittext_input_redondo"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:hint="Apellido Contacto"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"
        android:background="@drawable/edittext_input_redondo"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:hint="Profesión Contacto"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"
        android:background="@drawable/edittext_input_redondo"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:hint="Descripción Contacto"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"
        android:background="@drawable/edittext_input_redondo"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:hint="Teléfono Contacto"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"
        android:background="@drawable/edittext_input_redondo"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_login_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:onClick="listapublicaciones"
        android:padding="10dp"
        android:text=" Ver Publicaciones del contacto "
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="@drawable/boton_redondo"
        tools:ignore="OnClick" />
</LinearLayout>