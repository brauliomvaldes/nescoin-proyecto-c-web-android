<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Publicaciones">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:src="@mipmap/ic_logo_nescoin_foreground" />

        <TextView
            android:id="@+id/edt_registro_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary_1"
            android:padding="10dp"
            android:text="Publicaciones"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"

            android:textSize="22dp" />

        <ListView
            android:id="@+id/ListView_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:textSize="25dp"
            tools:layout_editor_absoluteY="0dp"></ListView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>